html
  head
    title=event.id
    link(rel="stylesheet",    href='./css/style.css')
    link(rel="stylesheet",    href='./css/bootstrap.min.css')
  body
    .container
      .row.spacer
      .row
        .header.jumbotron
          h1
            span.white=cfg.name
          h2
            span.white=cfg.description
      .row
        .sponsor
          .left
            span
              img(src='./images/swissnex.png')
          .right
            span
              h1 Sponsored by #{event.sponsor.name}
              p=event.sponsor.description
              p 
                a(href=event.sponsor.www)=event.sponsor.www
      .row
        .meetup
          .left
            span
              h1.orange BangaloreJS meetup
              h2.white When
              h2.white Where
          .right
            span
              img(src='./images/map.png')

        
