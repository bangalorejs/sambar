!!!5
html
  head
    title=event.id
    link(rel="stylesheet",    href='./css/style.css')
    link(rel="stylesheet",    href='./css/bootstrap.min.css')
  body
    a(href='https://github.com/minsh/sambar')
      img(style='position:absolute;top:0;right:0;border:0;',src='./images/forkme.png',alt='Fork me on GitHub')
    .container
      .row.spacer
      .row
        .header.jumbotron
          h1
            span.white=cfg.name
          h2
            span.white=cfg.description
      .row
        .sponsor
          span.frame
            .left
              span
                img(src='./images/swissnex.png')
            .right
              span
                h2 Sponsored by #{event.sponsor.name}
                p()=event.sponsor.description
                p 
                  a(href=event.sponsor.www)=event.sponsor.www
      .row
        .meetup
          span.frame
            .left
              span
                h2.orange #{cfg.name} Meetup
                h3.white When
                - var start = new Date(event.when.start);
                - var end = new Date(event.when.end);
                - var current = new Date();
                h4.orange #{dayNames[start.getDay()]}, #{monthNames[start.getMonth()]} #{getDate(start)}, #{start.getHours()}:#{getMinutes(start)}-#{end.getHours()}:#{getMinutes(end)} 
                h3.white Where
                h4.orange=event.where.address
                h4.orange=event.where.city
                if current < start
                  h2.white Grab your ticket today: 
                  h3.orange 
                    a(href=event.tickets) #{event.tickets}
            .right
              span
                a(href=event.where.map)
                  img(src='./images/map.png')
                  p Get directions
      - if (images.length > 0)
        .row
          .pictures
            ul
              - var cnt = 0;
              - each i in images
                - if (cnt%4 === 3)
                  li.first
                    a(href=i.modal,onclick='return showPic("'+i.modal+'");')
                      img(src=i.thumbnail)
                - else 
                  li
                    a(href=i.modal,onclick='return showPic("'+i.modal+'");')
                      img(src=i.thumbnail)
                - ++cnt

      - if (event.videos.length)
        .row
          .videos
            ul
              - var cnt = 0;
              - each v in event.videos
                - if (cnt%2 === 1)
                  li.first
                    a(href='http://youtube.com/watch?v='+v,onclick='return showVid("'+v+'");')
                      img(width="342px",height="256px",src="http://img.youtube.com/vi/"+v+"/0.jpg");
                      img.play(src="./images/play.png")
                - else 
                  li
                    a(href='http://youtube.com/watch?v='+v,onclick='return showVid("'+v+'");')
                      img(width="342px",height="256px",src="http://img.youtube.com/vi/"+v+"/0.jpg");
                      img.play(src="./images/play.png")
                - ++cnt
      .row
        .agenda
          span.frame
            h2 Agenda
            - each v, k in event.agenda
              p 
                h4
                  #{v.when} - #{v.what}   
                  - if (v.speaker_idx)
                    | #{event.speakers[v.speaker_idx].name}.
          span.separator
      - each v in event.speakers
        .row 
          .speaker
            span.frame 
              h2 #{v.name}
              .left
                span
                  img(src=v.pic)
              .right
                span
                  h4 #{v.bio}
                  - if (v.twitter)
                    a(href='http://twitter.com/'+v.twitter,target='_blank')
                      img(src='./images/twitter.png')
                  - if (v.github)
                    a(href='http://github.com/'+v.github,target='_blank')
                      img(src='./images/github.png')
            span.frame
              h3=v.talk.title
              p!=v.talk.abstract
            span.separator
      .row
        if current < start
          .grab_ticket
            span.frame
              span
                h2 Grab your ticket today: 
                  a(href=event.tickets) #{event.tickets}
      .row
        a.twitter-follow-button(href="https://twitter.com/"+cfg.twitter,data-show-count="false",data-size="large") Follow @#{cfg.twitter}
        script !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");
        #pic_modal.modal(tabindex="-1",role="dialog",aria-labelledby="myModalLabel",aria-hidden="true")
          .modal-body
            img(width="800px",height="531px")
        #vid_modal.modal(tabindex="-1",role="dialog",aria-labelledby="myModalLabel",aria-hidden="true")
          .modal-body
            iframe(width="530px",height="342px",frameborder="0",allowfullscreen)
      .row.spacer
      script(src="./js/jquery.min.js") 
      script(src="./js/bootstrap.min.js") 
      script
        function showPic(p) {
          $('#pic_modal img').attr({src:p});
          $('#pic_modal').modal();
          return false;
        }
        function showVid(p) {
          $('#vid_modal iframe').attr({src:"http://youtube.com/embed/"+p+"?autoplay=1"});
          $('#vid_modal').modal();
          return false;
        }
